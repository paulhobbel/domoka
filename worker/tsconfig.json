{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "lib",
    "sourceRoot": "src",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "pretty": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*.ts"
  ]
}